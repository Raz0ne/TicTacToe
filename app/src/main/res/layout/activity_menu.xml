<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MenuActivity">

    <Button
        android:id="@+id/start_game_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/player1_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/player1_name_et_hint"
        android:inputType="text"
        android:autofillHints="username"
        android:textAlignment="center"
        android:maxLength="16"
        app:layout_constraintTop_toBottomOf="@id/start_game_btn"
        app:layout_constraintBottom_toTopOf="@id/player2_name_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/player2_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/player2_name_et_hint"
        android:inputType="text"
        android:autofillHints="username"
        android:textAlignment="center"
        android:maxLength="16"
        app:layout_constraintTop_toBottomOf="@id/player1_name_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>